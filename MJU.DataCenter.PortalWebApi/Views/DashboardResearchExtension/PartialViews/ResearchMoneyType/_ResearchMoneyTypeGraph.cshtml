@{
    var userAccesToken = User.FindFirst("AccessToken").Value;
}
<div class="col-lg-6">
    <div class="card card-green-theme">
        <div class="card-header border-0">
            <div class="d-flex justify-content-between">
                <h3 class="card-title">กราฟแสดงงานวิจัยแยกตามแหล่งทุน</h3>
            </div>
        </div>
        <div class="card-body ">
            <div class="position-relative mb-4 text-center">
                <div class="btn-group btn-group-toggle btn-toggle-green" data-toggle="buttons">
                    <label class="btn btn-success label-default-bg active" id="switch-researchMoneyType-label-canvas">
                        <input type="radio" name="options" id="switch-researchMoneyType-chart-1" autocomplete="off" checked="">
                        <i class="fa fa-chart-bar" aria-hidden="true"></i><br /> มุมมองกราฟ
                    </label>
                    <label class="btn btn-success label-default-bg btn-toggle-green" id="switch-researchMoneyType-label-table">
                        <input type="radio" name="options" id="switch-researchMoneyType-chart-2" autocomplete="off">
                        <i class="fa fa-table" aria-hidden="true"></i><br /> มุมมองตาราง
                    </label>
                </div>
                <a class="btn btn-app" style="position: absolute;right: 0;" id="researchMoneyType-datasource">
                    <i class="fas fa-info"></i> ข้อมูล
                </a>
            </div>
            <br />
            <div class="position-relative mb-4" id="researchMoneyType-chart-canvas">
                <canvas id="researchMoneyType-chart" style="min-height: 300px; height: 300px; max-height: 300px; max-width: 100%;"></canvas>
            </div>
            <div class="position-relative mb-4" id="researchMoneyType-chart-table" style="display:none;">
                <partial name="PartialViews/ResearchMoneyType/_researchMoneyTypeGraphDataTable" />
            </div>
        </div>
    </div>
</div>

<div id="researchMoneyTypeModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="card card-success">
                <div class="card-header border-0">
                    <h3 class="card-title">แหล่งทุน <span id="researchMoneyTypeLabel"></span> </h3>
                    <div class="card-tools">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-striped table-valign-middle dataTable" id="researchMoneyTypeTable">
                        <thead>
                            <tr>
                                <th>รายชื่องานวิจัย</th>
                                <th>ผู้ทำวิจัย</th>
                                <th>จำนวนเงิน</th>
                                <!-- <th>More</th> -->
                            </tr>
                        </thead>
                        <tbody id="researchMoneyTypeSection">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hiddenRow {
        padding: 0 !important;
    }
</style>

<script>
    $(function () {
        ResearchMoneyTypeGraph(null,null,'@userAccesToken', '@User.Identity.Name');
        ToggleResearchChart("researchMoneyType");
        $('#researchMoneyType-datasource').click(function () {
            ResearchMoneyTypeGraphDS('@userAccesToken','@User.Identity.Name')
        });
    })
</script>
<partial name="PartialViews/ResearchMoneyType/_researchMoneyTypeGraphDataSource" />
