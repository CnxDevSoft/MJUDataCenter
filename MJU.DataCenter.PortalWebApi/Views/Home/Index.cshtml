
@model MJU.DataCenter.PortalWebApi.Models.HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var modelTest = Model;
}

@inject MJU.DataCenter.PortalWebApi.Services.Interface.IApplicationConfiguration AppSettings;
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3 class="text-green"><strong>MJU DataCenter API - การเชื่อมต่อฐานข้อมูลส่วนกลางมหาวิทยาลัยแม่โจ้</strong></h3>
                <br />
            </div>
            <div class="col-md-3">
                <!-- Profile Image -->
                <div class="card card-green card-outline">
                    <div class="card-body box-profile">
                        @*<div class="text-center">
                                <img class="profile-user-img img-fluid img-circle" src="../../dist/img/user4-128x128.jpg" alt="User profile picture">
                            </div>*@
                        <h3 class="profile-username text-center">@Model.UserInfo?.FullName</h3>
                        <p class="text-muted text-center">@Model.UserInfo?.Role</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>หน่วยงาน</b> <a class="float-right">@Model.UserInfo?.DepartmentRole?.DepartmentRoleNameTH</a>
                            </li>
                        </ul>
                        @*<a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>*@
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-md-9">
                <div class="card-header d-flex p-0 bg-light-sea-green">
                    <h3 class="card-title p-3">เอกสารการเชื่อมต่อฐานข้อมูลส่วนกลาง</h3>
                    <ul class="nav nav-pills ml-auto p-2">
                        <li class="nav-item"><a class="nav-link active" href="#tab_1" data-toggle="tab">ข้อมูล API</a></li>
                        <li class="nav-item"><a class="nav-link" href="#tab_2" data-toggle="tab">การจัดการสิทธิ์</a></li>
                        <li class="nav-item"><a class="nav-link" href="#tab_3" data-toggle="tab">อื่นๆ</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="card card-outline card-green">
                                <div class="card-header">
                                    <h3 class="card-title">Personnel Api</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div>Api: /xxxx/xxx</div>
                                    <iframe style="width:100%; min-height:450px;" src="@AppSettings.PerssonnelApiSwagger"></iframe>

                                </div>
                            </div>

                            <div class="card card-outline card-green">
                                <div class="card-header">
                                    <h3 class="card-title">Research Extension Api</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div>Api: /xxxx/xxx</div>
                                    <iframe style="width:100%; min-height:450px;" src="@AppSettings.ResearchExtensionApiSwagger"></iframe>

                                </div>
                            </div>

                        </div>
                        <div class="tab-pane" id="tab_2">
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <!-- super admin -->
                                <partial name="~/Views/Account/PartialViews/_SuperAdminManagementRole.cshtml" model="@Model" />
                            }
                            else
                            {
                                <!-- developer -->
                                <partial name="~/Views/Account/PartialViews/_UserManagementRole.cshtml" model="@Model" />
                            }

                        </div>
                        <div class="tab-pane" id="tab_3">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(function () {
        })
    </script>
</section>
