        <div class="card-body">
            <div class="position-relative mb-4">
                <canvas id="allResearch-chart" style="min-height: 300px; height: 300px; max-height: 300px; max-width: 100%;"></canvas>
            </div>

            <div class="d-flex flex-row justify-content-end">
