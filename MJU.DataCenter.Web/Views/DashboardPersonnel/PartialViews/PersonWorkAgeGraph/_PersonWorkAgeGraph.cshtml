@{
    var userAccesToken = User.Claims.LastOrDefault(x => x.Type == "DCWebToken").Value;
}
<div class="col-lg-6">
    <div class="card card-green-theme">
        <div class="card-header border-0">
            <div class="d-flex justify-content-between">
                <h3 class="card-title">กราฟแสดงจำนวนบุคลากรทั้งหมดแยกตามประเภทบุคลากรและช่วงอายุงาน</h3>
            </div>
        </div>
        <div class="card-body">
            <div class="position-relative mb-4 text-center">
                <div class="btn-group btn-group-toggle btn-toggle-green" data-toggle="buttons">
                    <label class="btn btn-success label-default-bg active" id="switch-personWorkAge-label-canvas">
                        <input type="radio" name="options" id="switch-personWorkAge-chart-1" autocomplete="off" checked="">
                        <i class="fa fa-chart-bar" aria-hidden="true"></i><br /> มุมมองกราฟ
                    </label>
                    <label class="btn btn-success label-default-bg btn-toggle-green" id="switch-personWorkAge-label-table">
                        <input type="radio" name="options" id="switch-personWorkAge-chart-2" autocomplete="off">
                        <i class="fa fa-table" aria-hidden="true"></i><br /> มุมมองตาราง
                    </label>
                </div>
                <a class="btn btn-app" style="position: absolute;right: 0;" id="personWorkAge-datasource">
                    <i class="fas fa-info"></i> ข้อมูล
                </a>
            </div>
            <br />
            <br />
            <br />
            <div class="position-relative mb-4" id="personWorkAge-chart-canvas">
                <canvas id="personWorkAge-chart" style="min-height: 300px; height: 300px; max-height: 300px; max-width: 100%;"></canvas>
            </div>
            <div class="position-relative mb-4" id="personWorkAge-chart-table" style="display:none;">
                <partial name="PartialViews/PersonWorkAgeGraph/_personWorkAgeGraphDataTable" />
            </div>

        </div>
    </div>
</div>

<script>
    $(function () {
        PersonWorkAgeGraph('@userAccesToken','@User.Identity.Name');
        ToggleChart("personWorkAge");
        $('#personWorkAge-datasource').click(function () {
            PersonWorkAgeGraphDS('@userAccesToken','@User.Identity.Name')
 });
    })

</script>
<partial name="PartialViews/PersonWorkAgeGraph/_personWorkAgeGraphDataSource" />