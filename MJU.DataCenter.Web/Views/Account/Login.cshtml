@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using MJU.DataCenter.Web.Models
@model MJU.DataCenter.Web.ViewModels.LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Log in";
}

    <div class="row align-items-center h-100">
        <div class="col-lg-12 card shadow" style="height: 80%;">
            <div class="card-body" style="padding: 0px !important;">
                <div class="row h-100">
                    <div class="col-lg-8 gradient-bg">
                        <div class="py-4">
                            <div class="py-2">
                                <img class="logo" src="~/img/logo.png"/>
                            </div>
                            <h2 class="text-white">MJU Datacenter</h2>
                        </div>
                    </div>
                    <div class="col-lg-4 align-self-center">
                        <h2 class="text-center">@ViewData["Title"]</h2>
                        <section>
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-green">Log in</button>
                                </div>
                                <div class="form-group text-center">
                                    <p>
                                        <a asp-action="ForgotPassword">Forgot password?</a>
                                    </p>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
